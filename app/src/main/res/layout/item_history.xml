<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivReportIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_file_dokumen"
            android:contentDescription="Ikon Laporan" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvReportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporan Proyek Akhir"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvReportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disimpan: 07 Des 2025"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivOpen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_open_in_new"
            android:contentDescription="Buka Laporan" />

    </LinearLayout>
</androidx.cardview.widget.CardView>